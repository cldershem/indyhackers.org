/******************************************************************************/
/*  Base styles                             	                                */
/******************************************************************************/
html {
  background-color: #fff;
}

body {
  margin: 0px;
  padding: 0px;
  font-family: 'Work Sans', sans-serif;
  color: black;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  font-family: 'Space Mono', monospace;
  font-weight: bold;
}

button,
input[type="submit"] {
  background-color: #FFC000;
  padding: 12px 16px;
  border: 0px;
  font-size: 18px;
  font-weight: bold;
  font-family: 'Work Sans', sans-serif;
}

a {
  text-decoration-color: #FFC000;
  color: black;
  font-weight: bold;
}

a:visited {
  color: black;
}

iframe {
  width: 100%;
}

.three-columns,
.two-columns {
  display: flex;
  align-items: center;
}

.three-columns>* {
  width: 33%;
}

.two-columns>* {
  width: 50%;
}

@media screen and (max-width: 680px) {
  .three-columns {
    flex-direction: column;
  }

  .three-columns>div {
    width: 100%;
  }
}